{
  "environment": "local",
  "capabilities": {
    "browserName": "firefox",
    "moz:firefoxOptions": {
      "binary": "%FILE:FIREFOX%",
      "args": ["--headless"]
    },
    "google:wslConfig": {
      "binary": "%FILE:GECKODRIVER%",
      "args": ["--port=%WSL:PORT%"],
      "status": true,
      "shutdown": false
    }
  }
} 
