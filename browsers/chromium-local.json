{
  "environment" : "local",
  "capabilities" : {
    "browserName" : "chromium",
    "chromeOptions" : {
      "args" : ["--headless", "--use-gl=swiftshader-webgl"],
      "binary" : "%CHROMIUM%"
    },
    "google:wslConfig": {
    	"binary": "%CHROMEDRIVER%",
    	"args": ["--port=%WSL:PORT%"],
      "shutdownEndpoint": true
    }
  }
}
