{
  "environment" : "local",
  "capabilities" : {
    "browserName" : "chromium",
    "chromeOptions" : {
      "binary" : "%CHROMIUM%",  
      "args" : [
        "--headless", 
        "--use-gl=swiftshader-webgl"
      ]
    },
    "google:wslConfig": {
      "binary": "%CHROMEDRIVER%",
      "args": ["--port=%WSL:PORT%"],
      "status": true,
      "shutdown": true
    }
  }
}
