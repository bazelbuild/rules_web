{
  "environment" : "local",
  "capabilities" : {
    "browserName" : "chromium",
    "chromeOptions" : {
      "binary" : "%FILE:CHROMIUM%",
      "args" : [
        "--headless",
        "--no-sandbox",
        "--use-gl=swiftshader-webgl"
      ]
    },
    "google:wslConfig": {
      "binary": "%FILE:CHROMEDRIVER%",
      "port":"%WSLPORT:WSL%",
      "args": ["--port=%WSLPORT:WSL%"],
      "status": true,
      "shutdown": true
    }
  }
}
